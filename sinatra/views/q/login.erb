<div class="q_login">
  <form action="/q/login" method="POST">
    <h2 class="form-signin-heading"><span class="glyphicon glyphicon-log-in"></span></h2>
    <p>
      Success <span class="glyphicon glyphicon-arrow-right"></span> Sign In, <br>
      Failed <span class="glyphicon glyphicon-arrow-right"></span> Sign Up
    </p>
<% if @error %>
    <div class="alert alert-danger">
      <%= @error %>
    </div>
<% end %>
    <label for="inputText" class="sr-only">Name</label>
    <input type="text" id="inputText" class="form-control" name="name" placeholder="name" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit"><span class="glyphicon glyphicon-save"></span> Submit</button>
  </form>
</div>
